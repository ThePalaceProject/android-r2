<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/reader2_progress_container"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:orientation="vertical"
  android:paddingStart="16dp"
  android:paddingTop="8dp"
  android:paddingEnd="16dp"
  android:paddingBottom="8dp">

  <!-- Reader progress -->
  <FrameLayout
    android:id="@+id/reader2_progress_bar_container"
    android:layout_width="match_parent"
    android:layout_height="4dp">

    <View
      android:id="@+id/reader2_progress_bar_border"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@drawable/sr2_progress_border" />

    <View
      android:id="@+id/reader2_progress_bar_fill"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="#000000" />
  </FrameLayout>

  <!-- Reader position -->

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:orientation="horizontal">

    <TextView
      android:id="@+id/reader2_position_page"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:ellipsize="end"
      android:gravity="start"
      android:singleLine="true"
      android:textAppearance="?android:attr/textAppearanceSmall"
      tools:text="Page 3 of 42" />

    <TextView
      android:id="@+id/reader2_position_title"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:ellipsize="end"
      android:gravity="center"
      android:singleLine="true"
      android:textAppearance="?android:attr/textAppearanceSmall"
      tools:text="Contents" />

    <TextView
      android:id="@+id/reader2_position_percent"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:ellipsize="end"
      android:gravity="end"
      android:singleLine="true"
      android:textAppearance="?android:attr/textAppearanceSmall"
      tools:text="50%" />
  </LinearLayout>
</LinearLayout>
